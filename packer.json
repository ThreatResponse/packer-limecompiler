{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-f173cc91",
    "instance_type": "t2.medium",
    "ssh_pty" : "true",
    "ssh_username": "ec2-user",
    "ami_name": "limecompiler_{{timestamp}}",
    "iam_instance_profile": "lime-compiler"
  }],
 "provisioners": [
   { "type": "shell",
      "inline": [
      "sleep 30",
      "sudo yum update -y",
      "sudo yum install epel-release -y",
      "sudo yum install @development -y",
      "sudo yum install python-pip -y",
      "sudo yum install python-setuptools -y",
      "sudo yum install -y jq wget zlib-dev openssl-devel sqlite-devel bzip2-devel python-devel",
      "sudo pip install ansible",
      "mkdir -p /home/ec2-user/.ssh",
      "sudo /usr/local/bin/ansible-galaxy install rvm_io.ruby",
      "wget http://s3.amazonaws.com/ec2metadata/ec2-metadata"
  ]},
  {
    "type": "file",
    "source": "files/00-tags-to-env.sh",
    "destination": "/home/ec2-user/"
   },
   {
     "type": "file",
     "source": "files/01-sync.sh",
     "destination": "/home/ec2-user/"
    },
    {
      "type": "file",
      "source": "files/02-build.sh",
      "destination": "/home/ec2-user/"
     },
     {
       "type": "file",
       "source": "files/03-sync.sh",
       "destination": "/home/ec2-user/"
    },
    { "type": "shell",
       "inline": [
       "sudo chmod 774 /home/ec2-user/*.sh",
       "sudo chmod 774 /home/ec2-user/ec2-metadata"
   ]},
   {
    "type": "ansible-local",
    "playbook_file": "./playbook.yml"
   }
 ]
}
